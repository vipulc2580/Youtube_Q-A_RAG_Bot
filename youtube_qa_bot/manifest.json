{
    "manifest_version": 3,
    "name": "YouTube Q&A Bot",
    "version": "1.0",
    "description": "Ask questions about YouTube videos using AI",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "*://127.0.0.1:8000/*"
    ]
}